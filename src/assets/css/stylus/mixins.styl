// 伪元素
pseudo-element(arg)
  content ''
  display inline-block
  width 55px
  height 55px
  background url(arg) no-repeat center
  background-size contain

// 弹性盒居中
centered()
  width 1226px
  margin 0 auto
  display flex
  justify-content space-between
  align-items center

// icon样式
iconStyle(arg)
  display inline-block
  background url(arg) no-repeat center
  background-size contain

modalPosition(pos=absolute, t=0, l=0, w=100%, h=100%)
  position pos
  top t
  left l
  width w
  height h